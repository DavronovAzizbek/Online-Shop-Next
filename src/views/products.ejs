<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Next.uz</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
      }
      .header .logo {
        flex: 1;
        text-align: left;
      }
      .header button {
        flex: 0;
        margin-left: auto;
      }
    </style>
  </head>
  <body>
    <header class="header py-3">
      <div class="container d-flex justify-content-between align-items-center">
        <div class="logo">
          <h1 style="margin: 0">NEXT</h1>
        </div>
        <button class="btn btn-primary">Enter</button>
      </div>
    </header>

    <main class="main">
      <div class="container">
        <!-- Categories Section -->
        <div
          class="categories d-flex justify-content-between align-items-center flex-wrap gap-4"
        >
          <% products.forEach(el => { %>
          <div class="card" style="width: 18rem">
            <img
              src="<%= el.img %>"
              class="card-img-top"
              alt="<%= el.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= el.name %></h5>
              <p class="card-text"><%= el.desc %></p>
              <p class="card-text"><%= el.price %> so'm</p>
              <a class="btn btn-primary" href="/orders/<%= el.id %>"
                >Buyurtma berish</a
              >
            </div>
          </div>
          <% }) %>
        </div>

        <!-- Modal -->
        <div
          class="modal fade"
          id="staticBackdrop"
          data-bs-backdrop="static"
          data-bs-keyboard="false"
          tabindex="-1"
          aria-labelledby="staticBackdropLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">
                  Modal title
                </h1>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">...</div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" class="btn btn-primary">
                  Understood
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
