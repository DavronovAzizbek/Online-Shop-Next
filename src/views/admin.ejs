<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>

   <header class="py-3">
    <div class="container d-flex justify-content-between align-items-center">
         <h1 class="">Admin panel</h1>
         <a href="/" class="btn btn-primary">Asosiy sahifa</a>
    </div>
   </header>

    <div class="container cars-container">
        <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Qo'shish
</button>


         <div class="cars">
            <h1>Mahsulotlar</h1>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nomi</th>
                    <th scope="col">Narxi</th>
                    <th scope="col">Tavsif</th>
                    <th scope="col">Rasm</th>
                  </tr>
                </thead>
                <tbody>
                    <% products.forEach(el => { %>
                        <tr>
                            <th scope="row"><%= el.id %></th>
                            <td><%= el.name %></td>
                            <td><%= el.price %></td>
                            <td><%= el.desc %></td>
                            <td><img width="50" height="50" src=<%= el.img %> alt=<%= el.name %>></td>
                          </tr>
                    <% }) %>
                </tbody>
              </table>
         </div>

            <div class="cars">
                <h1>Buyurtmalar</h1>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Mahsulot nomi</th>
                    <th scope="col">Soni</th>
                    <th scope="col">Umumiy narxi</th>
                    <th scope="col">Telefon raqam</th>
                    <th scope="col">Manzil</th>
                    <th scope="col">Rasm</th>
                  </tr>
                </thead>
                <tbody>
                    <% orders.forEach(el => { %>
                        <tr>
                            <th scope="row"><%= el.id %></th>
                            <td><%= el.product.name %></td>
                            <td><%= el.count %></td>
                            <td><%= el.product.price * el.count %></td>
                            <td><%= el.phone %></td>
                            <td><%= el.address %></td>
                            <td><img width="50" height="50" src=<%= el.product.img %> alt=<%= el.product.name %>></td>
                          </tr>
                    <% }) %>
                </tbody>
              </table>
         </div>
         <!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Mahsulot Qo'shish</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/products/create" method="post">
            <input required class="form-control mb-3" name="name" type="text" placeholder="Nomini kiriting">
            <input required class="form-control mb-3" name="price" type="number" min="0" placeholder="Narxini kiriting">
            <input required class="form-control mb-3" name="img" type="text" placeholder="Rasm linkini kiriting">
            <textarea required name="desc" class="form-control mb-3" placeholder="Tavsif yozing"></textarea>
            <button class="btn btn-success">Qo'shish</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</div>
</body>
</html>