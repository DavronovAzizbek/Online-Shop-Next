<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Next.uz</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
      }
      .header .logo {
        flex: 1;
        text-align: left;
      }
      .header button {
        flex: 0;
        margin-left: auto;
      }
    </style>
  </head>
  <body>
    <header class="header py-3">
      <div class="container d-flex justify-content-between align-items-center">
        <!-- Align "NEXT" to the left -->
        <div class="logo">
          <h1 style="margin: 0">NEXT</h1>
        </div>
      </div>
    </header>

    <main class="main">
      <div class="container">
        <nav class="navbar">
          <ul class="d-flex gap-4 fs-4 list-unstyled">
            <li>
              <a class="btn btn-primary text-decoration-none" href="/">
                categories
              </a>
            </li>
            <li>
              <a
                class="btn btn-primary text-decoration-none"
                href="/products/all"
              >
                products
              </a>
            </li>
          </ul>
        </nav>

        <!-- Categories Section -->
        <div
          class="categories d-flex justify-content-between align-items-center flex-wrap gap-4"
        >
          <% categories.forEach(el => { %>
          <div class="card" style="width: 18rem">
            <img
              src="<%= el.img %>"
              class="card-img-top"
              alt="<%= el.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= el.name %></h5>
              <a href="/products/<%= el.id %>" class="btn btn-primary">
                Batafsil
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
